
<div class="row">
  <div class="col-sm-4">


  </div>
  <div class="col-sm-8">
    <h1>Current Listings:</h1>
  </div>
</div>

<div class="col-md-10 offset-2">
  <% @instance.user_tools.each do |ut| %>
    <div class="card mb-3 w-75 h-50">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="<%= ut.image %>" class="card-img w-75 h-100" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= @instance.name %></h5>
            <p class="card-text"><%= ut.description %></p>
            <div class="row">
              <div class="col-md-4">
                <p class="card-text">$<small class="text-muted"><%= ut.cost %> / day </small></p>
              </div>
              <div class="col-md-4">
                <small> Offered by: <%= link_to ut.user.username, user_path(ut.user)%></small>
              </div>
              <div class="col-md-4">
                <small>
                  <% if ut.available %>
                    <% if current_user != ut.user %>
                      <%= link_to "Add to Cart", add_path(cart_tool:{user_tool_id:ut.id,cart_id:current_cart.id}), class: 'btn btn-primary'%>
                    <% end %>
                  <% else %>
                  <p>Currently Unavailable</p>
                  <% end %>
                </small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
