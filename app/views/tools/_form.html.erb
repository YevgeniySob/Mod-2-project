<div class="row">
  <div class="col-md-12">
    <%= form_for @tool do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name%>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :name, class: 'form-control', placeholder: 'name', autofocus: true%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :category_id%>
        </div>
        <div class="col-sm-6">
          <%= f.collection_select :category_id, Category.all, :id, :name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :cost %>
        </div>
        <div class="col-sm-6">

          <%= f.text_field :cost, class: 'form-control', placeholder: 'price'%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :image %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :image, class: 'form-control', placeholder: 'Image link' %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-6">
          <%= f.text_area :description, rows: 3, class: 'form-control', placeholder: 'Description' %>
        </div>
      </div>

      <%= f.submit 'Add tool', class: 'btn btn_primary' {}%>

    <% end %>
  </div>
</div>
