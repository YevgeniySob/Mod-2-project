<div align="centered">
  <%= render 'shared/errors', obj: @tool%>
</div>

<div class="row">
  <div class="col-md-9 offset-md-3">
    <%= form_for @tool do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= label_tag "Image", id: 'category_id' %>
        </div>
        <div class="col-sm-4">
          <%= f.collection_select :tool, :category_id, Category.all, :id, :name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name%>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :name, class: 'form-control', placeholder: 'name', autofocus: true%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= label_tag "Price" %>
        </div>
        <div class="col-sm-4">
          <input type="text" name="user_tool[cost]" id="user_tool[cost]" class="form-control" placeholder="price">

          <%#= f.text_field :cost, class: 'form-control', placeholder: 'price'%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= label_tag "Image" %>
        </div>
        <div class="col-sm-4">
          <input type="text" name="user_tool[image]" id="user_tool[image]" class="form-control" placeholder="url">
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= label_tag 'Description' %>
        </div>
        <div class="col-sm-4">
          <textarea rows="3" name="user_tool[description]" id="user_tool[description]" class="form-control" placeholder="description"></textarea>
        </div>
      </div>

      <%= f.submit class: 'btn btn-outline-primary' %>
    <% end %>
      <div class="col-md-4 offset-4">
        <%= link_to "Cancel", tools_path%>
      </div>
  </div>
</div>
