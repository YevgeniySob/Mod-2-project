

<div class="row">

  <div class="col-md-12">
    <%= render 'shared/errors', obj: @user %>
    <%= form_for(@user, :html => { class: "form-horizontal", role: "form" }) do |f| %>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :username, "Username:" %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :username, class: "form-control", placeholder: "username", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :email, "Email:" %>
        </div>
        <div class="col-sm-3">
          <%= f.email_field :email, class: "form-control", placeholder: "email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :password, 'Password (at least 6 characters including numbers and letters):' %>
        </div>
        <div class="col-sm-3">
          <%= f.password_field :password, class: "form-control", placeholder: "password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :first_name, "First Name:" %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :first_name, class: "form-control", placeholder: "first name" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :last_name, "Last Name:" %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :last_name, class: "form-control", placeholder: "last name" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :phone_number, "Phone Number:" %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :phone_number, class: "form-control", placeholder: "phone number" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update your account", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4">
      [ <%= link_to "Cancel", root_path %> ]
    </div>
  </div>
</div>
